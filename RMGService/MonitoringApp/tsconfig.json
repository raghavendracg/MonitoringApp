{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "files": [
    "typings/tsd.d.ts",  
    "src/app.ts",
    "src/pipes/index.ts",   
    "src/monitor/index.ts",
    "src/service/index.ts",
    "src/dashboard/index.ts",
    "src/index.ts"   
  ],
    "filesGlob": [
    "./src/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": true }
}
